<% plural_title = Rails.application.config.TITLE +  's' %>
<% provide(:title, plural_title) %>
<h1>Fellow <%= plural_title %> </h1>

<%= will_paginate %>

<ul class="users">
  <% @users.each_with_index do |user, index| %>
    <li class=<%= (index % 2 == 0) ? "even" : "odd"%>>
      <%= gravatar_for user, size: 50 %>
      <%= link_to user.name, user %>
      <% if current_user.admin? && !current_user?(user) %>
        | <%= link_to "delete", user, method: :delete, data: { confirm: "Delete?" } %>
        <% end %>
    </li>
  <% end %>
</ul>

<%= will_paginate %>
