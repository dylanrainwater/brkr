<% plural_title = Rails.application.config.TITLE +  's' %>
<% provide(:title, plural_title) %>
<h1>Fellow <%= plural_title %> </h1>

<%= will_paginate %>

<ul class="users">
  <% @users.each_with_index do |user, index| %>
    <li class=<%= (index % 2 == 0) ? "even" : "odd"%>>
      <%= gravatar_for user, size: 50 %>
      <%= link_to user.name, user %>
    </li>
  <% end %>
</ul>

<%= will_paginate %>
